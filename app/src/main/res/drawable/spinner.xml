<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo personalizado del Spinner -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/Primario"/> <!-- Color de fondo personalizado -->
            <corners android:radius="10dp"/> <!-- Esquinas redondeadas -->
            <!-- Elimina el padding para que el texto no se desplace fuera de la vista -->
        </shape>
    </item>

    <!-- Flecha hacia abajo a la derecha -->
    <item android:drawable="@drawable/baseline_arrow_drop_down_24"
        android:gravity="end|center_vertical"/>

</layer-list>